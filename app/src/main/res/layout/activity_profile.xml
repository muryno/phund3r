<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorAccent"
            android:src="@android:drawable/ic_menu_camera"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@+id/profileImage"
            app:layout_constraintEnd_toEndOf="@+id/profileImage"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:background="@color/white"
            android:src="@drawable/ic_avatar"
            android:id="@+id/view1"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            android:id="@+id/view_name"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muraino "
            android:scrollHorizontally="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_name"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_avatar"
            android:id="@+id/view4"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@id/view4"
            app:layout_constraintTop_toTopOf="@id/view4"
            android:id="@+id/view_address"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biola"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mavenpro_regular"
            android:scrollHorizontally="false"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/view_address"
            app:layout_constraintTop_toBottomOf="@id/view_address"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/ic_message"
            android:id="@+id/view2"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            android:id="@+id/view_mail"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:text="Muraino@gmail.com"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/view_mail"
            app:layout_constraintTop_toBottomOf="@id/view_mail"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/ic_lock"
            android:id="@+id/view3"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3"
            android:id="@+id/view_phone"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/view_phone"
            app:layout_constraintTop_toBottomOf="@id/view_phone"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>